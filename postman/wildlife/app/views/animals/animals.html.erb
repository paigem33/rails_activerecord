<h1>Wildlife datadase:</h1>
<h2>Add a new animal</h2>

<% if @animal.errors %>
    <%= @animal.errors.full_messages %>
<% end %>

<form action="/submit_animal" method="POST">
    
    <label for="name">Animal name:</label>
    <input id="name" type="text" name="animal[name]"></input>
    
    <label for="latin_name">Latin name:</label>
    <input id="latin_name" type="text" name="animal[latin_name]"></input>
    
    <label for="kingdom">Kingdom:</label>
    <input id="kingdom" type="text" name="animal[kingdom]"></input>
    
    <input type="submit" value="Submit that critter!"></input>
    
</form>