<h1>Place an order!</h1>

<% if @order.errors %>
    <%= @order.errors.full_messages %>
<% end %>

<form action="/submit_order" method="POST">
    <label for="product">Product:</label>
    <input id="product" type="text" name="order[product]"></input>
    
    <label for="quantity">Quantity:</label>
    <input id="quantity" type="text" name="order[quantity]"></input>
    
    <label for="account_id">Account ID:</label>
    <input id="account_id" type="text" name="order[account_id]"></input>
    
    <label for="ship_date">Est. Shipping Date (yyyy-m-d):</label>
    <input id="ship_date" type="text" name="order[ship_date]"></input>
    
    <input type="submit" value="Place Order"></input>
</form>